<h2>Books</h2>
<table>
<tr>
<th>Title</th>

<th>Body</th>
</tr>
 <% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to 'Show', book_path(book) %>
</td>
<td>
<%= link_to 'Edit', edit_book_path(book) %>
</td>
<td>
<%= link_to 'Destroy', book_path(book),method: :delete,data: {confirm: 'Are you sure?' }%>
</td>
</tr>


 <% end %>
</table>


<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book, url: 'books') do |f| %>
<%= render 'layouts/error_messages', book: f.object %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>